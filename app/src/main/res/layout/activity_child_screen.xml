<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Child Layout Title -->
    <TextView
        android:id="@+id/childLayoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CHILD LAYOUT"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        android:layout_marginTop="16dp" />

    <!-- Child ID TextView -->
    <TextView
        android:id="@+id/childIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/childLayoutTitle"
        android:layout_alignParentStart="true"
        android:text="Child ID"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="48dp"/>

    <!-- Speed TextView - Now below Child ID TextView -->
    <TextView
        android:id="@+id/speedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/childIdTextView"
        android:layout_alignParentStart="true"
        android:text="Speed"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"/>

    <!-- Heart Rate TextView -->
    <TextView
        android:id="@+id/heartRateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speedTextView"
        android:layout_alignParentStart="true"
        android:text="Heart Rate"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="48dp"/>

    <!-- Respiratory Rate TextView -->
    <TextView
        android:id="@+id/respRateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heartRateTextView"
        android:layout_alignParentStart="true"
        android:text="Respiratory Rate"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"/>

    <!-- Open Health Monitor Button -->
    <Button
        android:id="@+id/btnOpenHealthMonitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/respRateTextView"
        android:layout_centerHorizontal="true"
        android:text="Open Health Monitor"
        android:textSize="18sp"
        android:background="@drawable/button_background_primary"
        android:textColor="@color/button_text"
        android:layout_marginTop="48dp"/>

    <!-- SOS Button -->
    <Button
        android:id="@+id/sendAlertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOpenHealthMonitor"
        android:layout_centerHorizontal="true"
        android:text="SOS"
        android:textSize="18sp"
        android:background="@drawable/button_background_accent"
        android:textColor="@color/button_text"
        android:layout_marginTop="48dp"/>
</RelativeLayout>
